<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup"  
    style="justify-content: space-between">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
        <% if ( !userEmail ){ %>
          <div
          class="navbar-nav nav-item"
          style="justify-content: end; align-items: center"
        >
          <label for="longURL"></label>
          <a class="nav-item nav-link" href="/register"
            ><button class= "btn btn-primary" type="submit">Register</button></a
          >
          <a class="nav-item nav-link" href="/login"
            ><button class="btn btn-primary" type="submit">Login</button></a
          >
        </div>
        <% } else { %>
        <div>Loged in as: <%= userEmail %></div>

        <form class="form-inline" action="/logout" method="POST">
          <div class="form-group mb-2">
            <!-- <input
              class="form-control"
              type="text"
              name="username"
              placeholder="Enter username"
              style="width: 300px; margin: 1em"
            /> -->
            <button type="submit" class="btn btn-primary">Logout</button>
          </div>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
